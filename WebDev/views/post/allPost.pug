extends ../layout

block content
    if userid
        a(href='/post/create') Make a post
    ul
        each post in posts
            ul
               .postcontent
                    a(href="/post/"+ post.id) #{post.title} 
                    if userid==post.user
                    a(href="/post/update/"+ post.id)
                        button.btn.btn-primary Update
                    form.delete(method='POST' action="/post/delete/"+ post.id)
                        button.btn.btn-primary(type='submit') delete
        else
            p there are no posts